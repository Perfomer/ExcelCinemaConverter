<Window x:Class="ExcelConverter.AddScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelConverter"
        mc:Ignorable="d"
        Title="Добавить экран" Height="212" Width="426" KeyDown="Window_KeyDown" ResizeMode="NoResize" SizeToContent="Width" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="TB_ScreenName" Height="36" Margin="230,41,10,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <Label x:Name="L_ScreenName" Content="Название экрана" Margin="230,15,10,0" VerticalAlignment="Top" RenderTransformOrigin="1.539,0.577"/>
        <Label Content="Выделите форматы для экрана:" Margin="10,15,206,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ListBox x:Name="LB_Dimensionalities" Height="127" Margin="10,41,206,0" VerticalAlignment="Top" SelectionMode="Multiple"/>
        <Button x:Name="B_Save" Content="Сохранить" Click="B_Save_Click" Margin="230,128,10,0" VerticalAlignment="Top" Height="40"/>

    </Grid>
</Window>
